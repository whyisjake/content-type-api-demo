<?xml version="1.0"?>
<ruleset name="Content Type API Demo â€“ WordPress Coding Standards">
	<description>Applies the official WordPress Coding Standards to this plugin.</description>

	<!-- Scan all PHP files in the project root. -->
	<file>content-type-api-demo.php</file>

	<!-- WordPress Coding Standards configuration. -->
	<config name="minimum_supported_wp_version" value="6.5"/>

	<!-- Display progress and sniff names while running. -->
	<arg value="sp"/>
	<arg name="basepath" value="."/>
	<arg name="extensions" value="php"/>

	<!-- Ignore third-party or generated directories. -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>

	<!-- Match the default WordPress ruleset (Core + Docs + Extra). -->
	<rule ref="WordPress-Core"/>
	<rule ref="WordPress-Docs"/>
	<rule ref="WordPress-Extra"/>
</ruleset>
